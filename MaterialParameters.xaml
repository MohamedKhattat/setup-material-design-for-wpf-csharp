<!-- Resources/MaterialParameters.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Définition des couleurs principales -->
    <Color x:Key="PrimaryColor">#6200EE</Color>
    <Color x:Key="SecondaryColor">#03DAC5</Color>

    <!-- Définition des brosses -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />

    <!-- Style de bouton réutilisable -->
    <Style x:Key="MaterialButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="10,5" />
    </Style>

</ResourceDictionary>
